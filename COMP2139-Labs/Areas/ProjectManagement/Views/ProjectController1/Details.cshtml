@model Project

@{
    ViewData["Title"] = "Project Details"; //sets the title of the view to "Project Details"
   // ViewBag.Title = "Project Details";
    // Layout = "_Layout";
}

<h2>Project Details</h2>

<div class="card">
    
    <div class="card-body">
        <div class="card-title">@Model.Name</div>
        <div class="card-text">@Model.Description</div>

        <dl class="row">

            <dt class="col-sm-3">Project Id</dt>
            <dd class="col-sm-9">@Model.ProjectId</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <!-- Add more properties here / below -->

            
        </dl>
    
    
    <a asp-controller="ProjectController1" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
    <a asp-controller="ProjectController1" asp-action="Index" class="btn btn-secondary">Back to Project List</a>
        
    </div>


</div>