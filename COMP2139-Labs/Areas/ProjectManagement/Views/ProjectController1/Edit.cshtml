@model Project

@{
    ViewData["Title"] = "Edit Project"; // sets the title of the view to "Create Project".
    
}

@* <h2 xmlns="http://www.w3.org/1999/html">Create Project</h2> *@

<h2>Edit Project</h2>

<form asp-action="Edit" method="post">  <!-- Indicates that the form data will be submitted to the Create action of the current controller -->
    
    <!--
    Hidden field to ensure the ProjectId is included in the form su.....
    -->
    @Html.HiddenFor((model => model.ProjectId))
    
    <div class="form-group">
        <label asp-for="Name" class="Control-label"></label> <!-- asp-for tag used to bind input fields to the corresponding model  -->
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="Control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <!-- Include other form fields here -->
    
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
    
</form>

<!-- 
The section Scripts block at the bottom includes client-side validation scripts 
_ValidationScriptsPartial is by default available in Shared / Folder.
-->

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}